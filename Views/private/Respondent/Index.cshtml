        @if (!String.IsNullOrWhiteSpace(item.IncentiveCashValue))
        {
            <tr>
                <td class="bold">Incentive Cash Value:</td>
                <td>@item.IncentiveCashValue</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.IncentiveCashDescription))
        {
            <tr>
                <td class="bold">Incentive Cash Description:</td>
                <td>@item.IncentiveCashDescription</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.IncentiveNonCashValue))
        {
            <tr>
                <td class="bold">Incentive Non CashValue:</td>
                <td>@item.IncentiveNonCashValue</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.IncentiveNonCashDescription))
        {
            <tr>
                <td class="bold">Incentive Non Cash Description:</td>
                <td>@item.IncentiveNonCashDescription</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.IncentiveJustification))
        {
            <tr>
                <td class="bold">Incentive Justification:</td>
                <td>@item.IncentiveJustification</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.ConfidentialityLaw))
        {
            <tr>
                <td class="bold">Confidentiality Law:</td>
                <td>@item.ConfidentialityLaw</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.VoluntaryConfidentialStatementInstrument))
        {
            <tr>
                <td class="bold">Voluntary Confidential Statement Instrument:</td>
                <td>@item.VoluntaryConfidentialStatementInstrument</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.VoluntaryConfidentialStatementContactMaterial))
        {
            <tr>
                <td class="bold">Voluntary Confidential Statement ContactMaterial:</td>
                <td>@item.VoluntaryConfidentialStatementContactMaterial</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.VoluntaryConfidentialStatementFaq))
        {
            <tr>
                <td class="bold">Voluntary Confidential StatementFaq:</td>
                <td>@item.VoluntaryConfidentialStatementFaq</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.VoluntaryConfidentialStatementBrochure))
        {
            <tr>
                <td class="bold">Voluntary Confidential Statement Brochure:</td>
                <td>@item.VoluntaryConfidentialStatementBrochure</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.FollowUpInformedConsentStatement))
        {
            <tr>
                <td class="bold">Follow Up Informed Consent Statement:</td>
                <td>@item.FollowUpInformedConsentStatement</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.FollowUpInformedConsentLocation))
        {
            <tr>
                <td class="bold">Follow Up Informed Consent Location:</td>
                <td>@item.FollowUpInformedConsentLocation</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.PaperworkReductionActStatement))
        {
            <tr>
                <td class="bold">Paperwork Reduction Act Statement:</td>
                <td>@item.PaperworkReductionActStatement</td>
            </tr>
        }
        @if (!String.IsNullOrWhiteSpace(item.PaperworkReductionActLocation))
        {
            <tr>
                <td class="bold">Paperwork Reduction Act Location:</td>
                <td>@item.PaperworkReductionActLocation</td>
            </tr>
        }
        
    </table>

}
